<?xml version="1.0" encoding="utf-8" ?>
<!-- Defining styles for the background of sign in buttons (First Activity) -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
      
    <shape>
      <solid
          android:color="@color/expandable_list_selected" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
	</shape>
    
  </item>
  <item>
    <shape>
      <solid
          android:color="@color/expandable_list" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  
</selector>
