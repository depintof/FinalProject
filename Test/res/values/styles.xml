<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
    </style>
    
    <!-- ACTION BAR STYLE -->
    <style name="ThemeSelector" parent="android:Theme.Light">
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <item name="android:windowTitleStyle">@style/windowTitleStyle</item>
    </style>
 
    <style name="WindowTitleBackground">     
        <item name="android:background">@color/bar_background</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="windowTitleStyle">
	    <item name="android:textColor">@color/main_activity_color</item>
	    <item name="android:padding">12dip</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textSize">16sp</item>
  	</style>
    
	
    <!-- 1st ACTIVITY BUTTON STYLES -->
    <!-- Styles for the Forgotten Password Button -->
    <style name="forgotten_password_button" >
	    <item name="android:layout_width" >fill_parent</item>
	    <item name="android:layout_height" >wrap_content</item>
	    <item name="android:textColor" >@color/main_activity_color</item>
	    <item name="android:gravity" >center</item>
	    <item name="android:layout_margin" >3dp</item>
	    <item name="android:textSize" >12sp</item>
	    <item name="android:textStyle" >normal</item>
	    <item name="android:shadowColor" >@color/black</item>
	    <item name="android:shadowDx" >1</item>
	    <item name="android:shadowDy" >1</item>
	    <item name="android:shadowRadius" >2</item>
  	</style>
    
    <!-- Styles for the Sign In Button -->
    <style name="sign_in_button" >
	    <item name="android:layout_width" >fill_parent</item>
	    <item name="android:layout_height" >wrap_content</item>
	    <item name="android:textColor" >@color/dark_blue</item>
	    <item name="android:gravity" >center</item>
	    <item name="android:layout_margin" >3dp</item>
	    <item name="android:textSize" >16sp</item>
	    <item name="android:textStyle" >bold</item>
	    <item name="android:shadowColor" >@color/transparent</item>
	    <item name="android:shadowDx" >1</item>
	    <item name="android:shadowDy" >1</item>
	    <item name="android:shadowRadius" >2</item>
  	</style>
  	
    <!-- Styles for the Create Account Button -->
    <style name="create_account_button" >
	    <item name="android:layout_width" >fill_parent</item>
	    <item name="android:layout_height" >wrap_content</item>
	    <item name="android:textColor" >@color/underlined_text</item>
	    <item name="android:gravity" >center</item>
	    <item name="android:layout_margin" >3dp</item>
	    <item name="android:textSize" >16sp</item>
	    <item name="android:textStyle" >normal</item>
	    <item name="android:shadowColor" >@color/black</item>
	    <item name="android:shadowDx" >1</item>
	    <item name="android:shadowDy" >1</item>
	    <item name="android:shadowRadius" >2</item>
  	</style>
  	
    <!-- 2nd ACTIVITY BUTTON STYLES -->
    <!-- Styles for the Create Account Button -->
    <style name="create_new_account_button" >
	    <item name="android:layout_width" >fill_parent</item>
	    <item name="android:layout_height" >wrap_content</item>
	    <item name="android:textColor" >@color/main_activity_color</item>
	    <item name="android:gravity" >center</item>
	    <item name="android:layout_margin" >3dp</item>
	    <item name="android:textSize" >16sp</item>
	    <item name="android:textStyle" >normal</item>
	    <item name="android:shadowColor" >@color/black</item>
	    <item name="android:shadowDx" >1</item>
	    <item name="android:shadowDy" >1</item>
	    <item name="android:shadowRadius" >2</item>
  	</style>
  	
</resources>
