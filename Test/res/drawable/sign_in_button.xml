<?xml version="1.0" encoding="utf-8" ?>
<!-- Defining styles for the background of sign in buttons (First Activity) -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="@color/underlined_text" />
      <stroke
          android:width="1dp"
          android:color="@color/main_activity_color" />
      <corners
          android:radius="10dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
	</shape>
    
  </item>
  <item>
    <shape>
      <solid
          android:color="@color/back_sign_in_button" />
      <corners
          android:radius="10dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  
</selector>
